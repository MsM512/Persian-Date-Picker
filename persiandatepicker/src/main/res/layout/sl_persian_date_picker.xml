<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <com.salehi.persiandatepicker.view.PersianNumberPicker
                android:id="@+id/yearNumberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_divider="@color/dp_white"
                app:np_selectedTextColor="@color/dp_title"
                app:np_selectedTextSize="20sp"
                app:np_textColor="@color/dp_fade"
                app:np_textSize="20sp"
                app:np_wheelItemCount="3"
                tools:background="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <com.salehi.persiandatepicker.view.PersianNumberPicker
                android:id="@+id/monthNumberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_divider="@color/dp_white"
                app:np_selectedTextColor="@color/dp_title"
                app:np_selectedTextSize="20sp"
                app:np_textColor="@color/dp_fade"
                app:np_textSize="20sp"
                app:np_wheelItemCount="3"
                tools:background="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.salehi.persiandatepicker.view.PersianNumberPicker
                android:id="@+id/dayNumberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_divider="@color/dp_white"
                app:np_selectedTextColor="@color/dp_title"
                app:np_selectedTextSize="20sp"
                app:np_textColor="@color/dp_fade"
                app:np_textSize="20sp"
                app:np_wheelItemCount="3"
                tools:background="#fff" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>